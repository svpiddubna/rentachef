<div class="container">
  <div class="row">
    <div class="profile">
      <h3 class="h3-margin"><%= @chef.first_name %> <%= @chef.last_name %></h3>
      <div>
        <div class="col-xs-12 col-md-6">
          <div class="card-profile">
            <img src= <%= @chef.photo %> alt="Me", class="profile-pic">
            <br>
            <br>
            <div class="card-profile-text">
              <%= cl_image_tag @chef.user.photo.url(:bright_face), class: "chef-show-avatar" if @chef&.user&.photo %>
              <p><i class="far fa-map"></i> <strong><%= @chef.location %></strong></p>
              <p><i class="fas fa-utensils"></i> <strong><%= @chef.cuisine %></strong></p>
              <p><i class="fas fa-money-bill"></i> <strong><%= @chef.rate %>â‚¬/hour</strong></p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-md-6">
        <h3>Get to know me:</h3>
        <p><%= @chef.description %></p>


        <h3>Want me to cook for you?</h3>

        <%= simple_form_for [@chef, @booking] do |f| %>
        <%= f.input :date, as: :string, input_html: {class: "datepicker"} %>
        <%= f.hidden_field :location, :value => params[:location] %>
        <%= f.submit "Cook for me", class: "btn btn-success" %>
        <% end %>

      </div>
    </div>

    <div class="row">
      <div class="col-xs-12" style="margin: 30px 0 0 12px">
        <%= link_to "Back to search results", chefs_path(location: @location), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
