<div class='container'>
  <div class='row'>
    <h2>Welcome <%= current_user.first_name %> <%= current_user.last_name %></h2>
    <div class="col-xs-12">
    <h4><u>Upcoming bookings:</u></h4>
      <ol><h4><% @upcoming_bookings.each do |booking| %>
      <li>You have a booking with <strong><%= booking.chef.first_name %> <%= booking.chef.last_name %></strong> on: <strong><%= booking.date %></strong> <%= link_to "Cancel this booking", booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%>
      </li>
      <% end %></ol></h4>

    <h4><u>Previous bookings:</u></h4>
      <ol><h4><% @past_bookings.each do |booking| %>
      <li>You booked <strong><%= booking.chef.first_name %> <%= booking.chef.last_name %></strong> on: <strong><%= booking.date %></strong>
      </li>
      <% end %></ol></h4>

    </div>
  </div>
</div>


